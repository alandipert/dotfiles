set foldcolumn=3
set foldmethod=syntax
set foldnestmax=2
set foldenable
set foldlevelstart=1
set number
syntax on

colorscheme koehler
hi FoldColumn ctermbg=Black ctermfg=Yellow
hi Statement  ctermfg=Black

